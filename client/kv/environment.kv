#:kivy 1.5.1


<Wall>:
    size: 32, 32
    size_hint: None, None
    pos_hint: {"x":0, "y":0}
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.sprite

<Mine>
    size: 10,10
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.sprite

<Terminal>:
    size: 32, 32
    canvas:
        Rectangle:
            pos: self.pos[0]+8, self.pos[1] + 8
            size: 16,16
            source: root.sprite

<Camera>:
    size: 32, 32
    canvas:
        PushMatrix:
        Translate:
            x: self.x + self.pos_offset_x
            y: self.y + self.pos_offset_y
        PushMatrix:
        Rotate:
            angle: self.rotation
        Rectangle:
            pos: -self.pos_offset_x, -self.pos_offset_y
            size: 11,11
            source: self.sprite
        PopMatrix:
        PopMatrix:
