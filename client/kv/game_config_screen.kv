#:kivy 1.5.1
<GameConfigScreen>:
    serverIp: serverIp
    nick: nick
    cb0: cb0
    cb1: cb1

    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 50

        Label:
            size_hint: (1, 0.2)
            text: 'Configuration de la partie'
            halign: 'center'

        StackLayout:
            orientation: 'lr-tb'
            Label:
                size_hint: (0.3, None)
                text: 'IP Serveur'
                height: 30
            TextInput:
                size_hint: (0.3, None)
                height: 30
                id: serverIp
                multiline: False

        StackLayout:
            orientation: 'lr-tb'
            Label:
                size_hint: (0.3, None)
                text: 'Pseudo'
                height: 30
            TextInput:
                size_hint: (0.3, None)
                height: 30
                id: nick
                multiline: False


        GridLayout:
            cols: 2
            rows: 2
            Label:
                size: (100, 30)
                text: 'Jouer en tant qu{0}'.format(root.team[0])
            CheckBox:
                group: 'teamcb'
                id: cb0
            Label:
                size: (100, 30)
                text: 'Jouer en tant qu{0}'.format(root.team[1])
            CheckBox:
                group: 'teamcb'
                id: cb1


        Button:
            text: 'PrÃªt'
            size_hint: (0.5, None)
            height: 50
            pos_hint: {'center_x': 0.5}
            on_press: root.validateParameters()
