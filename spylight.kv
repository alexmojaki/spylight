#:kivy 1.4.2

<Character>:
    size: 32,32
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
            source: self.sprite

<Wall>:
    size: 32, 32
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'art/wall.png'

<Mine>
    size: 10,10
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'art/mine.png'

<Terminal>:
    size: 32, 32
    canvas:
        Rectangle:
            pos: self.pos[0]+8, self.pos[1] + 8
            size: 16,16
            source: 'art/terminal.png'

<Shadow>:
    size: -42, -42
    pos: 100, 100

<Timer>:
    size: 100, 40
    Label:
        pos:0,0
        size:root.size
        text:root.time


<CapInfo>:
    size: 100, 40
    Label:
        pos:400,0
        text:root.percentage


<MapView>:
    canvas:
        StencilPush
        Triangle:
            points: self.character.points
        Mesh:
        	vertices: self.character.sightPts
            indices: self.character.sightIndices
            mode: 'triangle_fan'
        StencilUse
            func_op: 'lequal'
        Rectangle:
            pos:0,0
            size:self.width, self.height
            texture:self.groundTexture
        Rectangle:
            pos: self.shadow.pos
            size: self.shadow.size
            source: self.shadow.sprite
        StencilUnUse
        StencilPop

