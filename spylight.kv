#:kivy 1.4.1

<Character>:
    size: 32,32
    pos:  32,32
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
            source: self.sprite

<Wall>:
    size: 32, 32
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'art/wall.png'

<Terminal>:
    size: 32, 32
    canvas:
        Rectangle:
            pos: self.pos[0]+8, self.pos[1] + 8
            size: 16,16
            source: 'art/terminal.png'

<MapView>:

    canvas:
        StencilPush
        Triangle:
            points: self.spy.points
        StencilUse
        Rectangle:
            pos:0,0
            size:self.width, self.height
            texture:self.groundTexture
        StencilUnUse
        StencilPop

<SpylightGame>:
