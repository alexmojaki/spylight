#:kivy 1.4.1

<Spy>:
    size: 32,32
    pos:  32,32
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
            source: 'art/spy.png'


<Wall>:
    size: 32, 32 

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'art/wall2.png'

<MapView>:
    canvas:
        StencilPush
        Triangle:
            points: self.spy.points
        StencilUse
        Rectangle:
            pos:0,0
            size:self.width, self.height
            texture:self.groundTexture
        StencilUnUse
        StencilPop

