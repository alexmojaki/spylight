#:kivy 1.4.1

<Character>:
    size: 32,32
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
            source: self.sprite

<Wall>:
    size: 32, 32
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'art/wall.png'

<Mine>
    size: 7, 7 
    canvas:
        Rectangle:
            center: self.center
            size: self.size
            source: 'art/mine.png'

<Terminal>:
    size: 32, 32
    canvas:
        Rectangle:
            pos: self.pos[0]+8, self.pos[1] + 8
            size: 16,16
            source: 'art/terminal.png'

<Shadow>:
    size: 10, 10
    canvas:
        Color:
            rgb: 1, 0, 0
        Ellipse:
            pos: self.pos
            size: self.size

<MapView>:

    canvas:
        StencilPush
        Triangle:
            points: self.character.points
        StencilUse
        Rectangle:
            pos:0,0
            size:self.width, self.height
            texture:self.groundTexture
        StencilUnUse
        StencilPop

<SpylightGame>:
