#:kivy 1.5.1

[MenuButton@Button]:
    text: ctx.text if hasattr(ctx, 'text') else ''
    on_press: getattr(ctx,'pressHandler')() if hasattr(ctx, 'pressHandler') else ''
    size_hint: (0.5, None)
    height: 50
    pos_hint: {'center_x': 0.5}

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 50

        Label:
            size_hint: (1, 0.2)
            text: 'Spylight'
            halign: 'center'
        

        MenuButton:
            text: 'Jouer'
            pressHandler: root.play
            # Warning: on a regular button, the function must take the parenthesis


        MenuButton:
            text: 'Quitter'
            pressHandler: root.stopApp
