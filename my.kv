<MyGrid>:
    canvas:
        StencilPush
        # create a rectangle mask, from pos 100, 100, with a 100, 100 size.
        Mesh:
            points: self.points

        StencilUse
        # we want to show a big green rectangle, however, the previous stencil
        # mask will crop us :)
        Color:
            rgb: 0, 1, 0
        Rectangle:
            size: 900, 900

        StencilUnUse
        # we want to show a big green rectangle, however, the previous stencil
        # mask will crop us :)

        StencilPop

        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: 100, 100
            size: 200, 200
